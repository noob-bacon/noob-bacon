local button = script.Parent

button.MouseButton1Click:Connect(function()
    -- Destroy the entire GUI
    local parentGui = button:FindFirstAncestorOfClass("ScreenGui")
    if parentGui then
        parentGui:Destroy()
    end

    -- Load the external script
    loadstring(game:HttpGet("https://raw.githubusercontent.com/noob-bacon/Hi-libbbb/refs/heads/main/sigma-balls"))()
end)
